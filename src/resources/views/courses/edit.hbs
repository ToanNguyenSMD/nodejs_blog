<div class="mt-4">
  <h3>Cập nhật khóa học</h3>
  <form method="post" action="/courses/{{course._id}}?_method=PUT" class="mt-4">
    <div class="form-group">
      <label for="name">Tên khoá học</label>
      <input
        type="text"
        class="form-control"
        id="name"
        value="{{course.name}}"
        name="name"
      />
    </div>
    <div class="form-group">
      <label for="desc">Mô tả</label>
      <textarea name="desc" id="desc" class="form-control">{{course.desc}}</textarea>
  
    </div>
    <div class="form-group">
      <label for="videoId">Video ID</label>
      <input
        type="text"
        class="form-control"
        id="videoId"
        name="videoId"
        value="{{course.videoId}}"
      />
    </div>
    <div class="form-group">
      <label for="level">Trình độ</label>
      <input
        type="text"
        class="form-control"
        id="level"
        name="level"
        value="{{course.level}}"
      />
    </div>
    
     
  
    <button type="submit" class="btn btn-primary">Lưu</button>
  </form>
</div>